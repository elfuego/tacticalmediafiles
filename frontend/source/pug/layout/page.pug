//- Load mixins
include ../modules/mixins

//- Load variables
block variables
    - var title = title ? ( title + " - Tactical Media Files" ) : "Tactical Media Files";
    - var bodyClass = bodyClass || "";
    - var mainClass = mainClass || "";

doctype html
html( lang="en" )
    head
        meta( charset="utf-8" )
        meta( http-equiv="X-UA-Compatible" content="IE=edge" )

        title=title

        link( rel="icon" href="/favicon.png" )

        link( rel="apple-touch-icon", sizes="152x152", href="/apple-touch-icon.png" )
        link( rel="icon", type="image/png", href="/favicon-32x32.png", sizes="32x32" )
        link( rel="icon", type="image/png", href="/favicon-16x16.png", sizes="16x16" )

        meta( name="viewport" content="width=device-width,initial-scale=1.0" )

        link( href=config.paths.assets.css+"/styles.css" rel="stylesheet" type="text/css" )

    body( class=bodyClass )
        .page-layout
            a#skip-link( href="#main" ) Skip to main content
            header.page-layout__header
                include header
                include navigation

            main#main.page-layout__main
                .main-content( class=mainClass )
                    block main

            footer.page-layout__footer
                include footer

            .overlay( data-select-results )
                include overlay
            
        script( src=config.paths.assets.js+"/main.js" )
            