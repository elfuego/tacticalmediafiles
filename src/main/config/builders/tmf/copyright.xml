<?xml version="1.0" encoding="UTF-8"?>
<builder 
 xmlns="http://www.mmbase.org/xmlns/builder"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.mmbase.org/xmlns/builder 
http://www.mmbase.org/xmlns/builder.xsd" 
name="copyright" maintainer="debalie.org" version="1" extends="object">

	<status>active</status>
	
	<searchage>1400</searchage>
	
	<names>
		<singular xml:lang="nl">Copyright</singular>
		<singular xml:lang="en">Copyright</singular>
		<plural xml:lang="nl">Copyright</plural>
		<plural xml:lang="en">Copyright</plural>
	</names>
	
	<descriptions>
		<description xml:lang="nl">Copyleft or copyright licentie beschrijving</description>
		<description xml:lang="en">Copyleft or copyright license description</description>
	</descriptions>
	
	<properties>
		<property name="max-nodes-from-query">1000</property>
	</properties>

	<fieldlist>
		<field name="name">
			<gui>
				<guiname xml:lang="nl">Naam</guiname>
				<guiname xml:lang="en">Name</guiname>
			</gui>
			<editor>
				<positions>
					<input>1</input><list>1</list><search>1</search>
				</positions>
			</editor>
            <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
              <maxLength value="255" />
            </datatype>
		</field>
		
		<field name="licence">
			<gui>
				<guiname xml:lang="nl">Omschrijving</guiname>
				<guiname xml:lang="en">Description</guiname>
			</gui>
			<editor>
				<positions>
				 	<input>2</input><list>-1</list><search>2</search>
				</positions>
			</editor>
            <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
              <maxLength value="64000" />
            </datatype>
		</field>
	</fieldlist>
</builder>
