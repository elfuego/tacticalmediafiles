<?xml version="1.0" encoding="UTF-8"?>
<builder 
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder 
                        http://www.mmbase.org/xmlns/builder.xsd"                        
    name="event" maintainer="debalie.org" version="1" extends="object">

	<status>active</status>
	
	<searchage>1400</searchage>
	
	<names>
		<singular xml:lang="en">Event</singular>
	    <singular xml:lang="nl">Gebeurtenis</singular>
		<plural xml:lang="nl">Gebeurtenissen</plural>
		<plural xml:lang="en">Events</plural>
	</names>
	
	<descriptions>
		<description xml:lang="nl"></description>
		<description xml:lang="en"></description>
	</descriptions>
	
	<properties>
	    <property name="max-nodes-from-query">1000</property>
	</properties>
	
  <fieldlist>
		
    <field name="title">
      <descriptions>
        <description xml:lang="en">Title</description>
        <description xml:lang="nl">Titel</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Title</guiname>
        <guiname xml:lang="nl">Titel</guiname>
      </gui>
      <editor>
        <positions>
          <input>1</input>
          <list>1</list>
          <search>1</search>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <required value="false">
          <description xml:lang="nl">Dit is een verplicht veld</description>
          <description xml:lang="en">This is a required field</description>
        </required>
        <maxLength value="255" />
      </datatype>
    </field>

    <field name="subtitle">
      <descriptions>
        <description xml:lang="en">Subtitle or extra title</description>
        <description xml:lang="nl">Subtitel of extra titel</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Subtitel</guiname>
        <guiname xml:lang="en">Subtitle</guiname>
      </gui>
      <editor>
        <positions>
          <input>2</input>
          <list>2</list>
          <search>2</search>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="255" />
      </datatype>
    </field>

    <field name="created" readonly="true" state="system">
      <descriptions>
        <description xml:lang="en">Date of creation</description>
        <description xml:lang="nl">Datum van aanmaak</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Aangemaak datum</guiname>
        <guiname xml:lang="en">Creation date</guiname>
      </gui>
      <editor>
        <positions>
          <input>3</input>
          <list>-1</list>
          <search>3</search>
        </positions>
      </editor>
      <datatype base="created" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <default value="now" />
      </datatype>
    </field>

    <field name="intro">
      <descriptions>
        <description xml:lang="en">Intro or short description</description>
        <description xml:lang="nl">Inleiding of intro </description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Inleiding</guiname>
        <guiname xml:lang="en">Intro</guiname>
      </gui>
      <editor>
        <positions>
          <input>7</input>
          <search>7</search>
        </positions>
      </editor>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="2048" />
      </datatype>
    </field>
    
    <field name="body">
      <descriptions>
        <description xml:lang="en">Body text</description>
        <description xml:lang="nl">Hoofd tekst</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Artikel</guiname>
        <guiname xml:lang="en">Article</guiname>
      </gui>
      <editor>
        <positions>
          <input>8</input>
          <search>8</search>
        </positions>
      </editor>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="64000" />
      </datatype>
    </field>
    
    <field name="keys">
      <descriptions>
        <description xml:lang="en">Keywords</description>
        <description xml:lang="nl">Trefwoorden</description>
      </descriptions>
      <gui>
        <guiname xml:lang="nl">Trefwoorden</guiname>
        <guiname xml:lang="en">Keywords</guiname>
      </gui>
      <editor>
        <positions>
          <input>6</input>
          <search>6</search>
        </positions>
      </editor>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="2048" />
      </datatype>
    </field>
    
    <!-- new fields below -->
		<field name="begindate">
			<gui>
				<guiname xml:lang="nl">Begin Datum</guiname>
				<guiname xml:lang="en">Begin Date</guiname>
	 		</gui>
			<editor>
				<positions>
					<input>3</input><list>3</list><search>3</search>
				</positions>
			</editor>
            <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes">
              <default value="today" />
              <minInclusive enforce="never" value="today - 20 year" />
              <maxInclusive enforce="never" value="today + 99 year" />
            </datatype>
		</field>
		
		<field name="enddate">
			<gui>
				<guiname xml:lang="nl">Eind Datum</guiname>
				<guiname xml:lang="en">End Date</guiname>
	 		</gui>
			<editor>
				<positions>
					<input>4</input><list>4</list><search>4</search>
				</positions>
			</editor>
            <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes">
              <default value="today + 100 year" />
              <minInclusive enforce="never" value="today - 20 year" />
              <maxInclusive enforce="never" value="today + 200 year" />
            </datatype>
        </field>
		
		<field name="ended">
			<gui>
				<guiname xml:lang="nl">Is geeindigd?</guiname>
				<guiname xml:lang="en">Has ended?</guiname>
	 		</gui>
			<editor>
				<positions>
					<input>5</input><list>5</list><search>5</search>
				</positions>
			</editor>
			<!-- <datatype base="boolean" xmlns="http://www.mmbase.org/xmlns/datatypes" />
			<db>
				<name>ended</name>
				<type key="false" notnull="true" state="persistent">integer</type>
			</db> -->
            <datatype xmlns="http://www.mmbase.org/xmlns/datatypes" base="onoff">
              <default value="false" />
            </datatype>
			
		</field>
    
    	
  </fieldlist>
</builder>
