<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">

<wizard-schema id="collection">
	<title xml:lang="en">Collection Wizard</title>
	<title xml:lang="nl">Collectie Wizard</title>
	
	<action type="create">
		<object type="collection" />
	</action>
	
	<action type="delete">
		<prompt xml:lang="en">Are you sure you want to remove this collection?</prompt>
		<prompt xml:lang="nl">Weet je zeker dat je deze collectie wilt verwijderen?</prompt>
		<description xml:lang="en">Remove Collection</description>
		<description xml:lang="nl">Collectie verwijderen</description>
	</action>
	
	<action type="load">
		<relation role="related" searchdir="destination" destination="keyword">
			<object>
				<field name="keyword" />
			</object>
		</relation>	
		<relation role="related" searchdir="destination" destination="organisation">
			<object>
				<field name="name" />
				<field name="subtitle" />
			</object>
		</relation>
		<relation role="related" searchdir="destination" destination="person">
			<object>
				<field name="prefix" />
				<field name="firstname" />
				<field name="sirname" />
			</object>
		</relation>
		<relation role="related" searchdir="destination" destination="event">
			<object>
				<field name="title" />
				<field name="subtitle" />
			</object>
		</relation>
		<relation role="posrel" searchdir="destination" destination="picture">
			<object>
				<field name="title"/>
				<field name="description"/>
				<field name="filename"/>
			</object>
		</relation>
		<relation role="related" searchdir="destination" destination="video">
			<object>
				<field name="title"/>
				<field name="description"/>
				<field name="handle"/>
			</object>
		</relation>
		<relation role="related" searchdir="destination" destination="file">
			<object>
				<field name="title"/>
				<field name="description"/>
				<field name="filename"/>
			</object>
		</relation>					
		<relation role="related" searchdir="destination" destination="url">
			<object>
				<field name="title" />
				<field name="url" />
			</object>
		</relation>
		<relation role="related" searchdir="destination" destination="article">
			<object>
				<field name="title" />
				<field name="subtitle" />
			</object>
		</relation>	
	</action>
	
	<form-schema id="collection">
		
		<title xml:lang="en">Collection</title>
		<title xml:lang="nl">Collectie</title>
		
		<field name="title" dtrequired="true" />
		<field name="subtitle">
          <prompt xml:lang="en">Author</prompt>
          <prompt xml:lang="nl">Auteur</prompt>
          <description xml:lang="en">Author of this collection</description>
          <description xml:lang="nl">Auteur of samensteller van deze collectie</description>
		</field>
		<field name="intro" ftype="html" dttype="html" rows="20" />
		<field name="body" rows="25" ftype="html" dttype="html" />
		
		<list include="TMF/list_keyword.xml" />
		<list include="TMF/list_picture.xml" />
		<list include="TMF/list_article.xml" />
	</form-schema>
		
		
		
		
	<form-schema id="relations">
	
		<title xml:lang="en">Other relations</title>
		<title xml:lang="nl">Overige relaties</title>
		
		<list include="TMF/list_event.xml" />
		<list include="TMF/list_person.xml" />
		<list include="TMF/list_organisation.xml" />
		<list include="TMF/list_url.xml" />
		<list include="TMF/list_video.xml" />
		<list include="TMF/list_file.xml" />
		
	</form-schema>
</wizard-schema>