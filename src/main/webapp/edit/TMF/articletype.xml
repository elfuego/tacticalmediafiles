<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">

<wizard-schema id="type">
	<title xml:lang="en">type Wizzard</title>
	<title xml:lang="nl">type Wizzard</title>
	
	<action type="create">
		<object type="type">
			<field name="typeoftype">article</field>
		</object>
	</action>
	
	<action type="delete">
		<prompt xml:lang="en">Are you sure you want to remove this plaatje?</prompt>
		<prompt xml:lang="nl">Weet je zeker dat je dit bestand wilt verwijderen?</prompt>
		<description xml:lang="en">Remove type</description>
		<description xml:lang="nl">type verwijderen</description>
	</action>
	
	<action type="load" />
  	
	<form-schema id="type">		
		<field name="typeoftype" ftype="data"/>		
		<field name="type" dtrequired="true" />		
	</form-schema> 
</wizard-schema>