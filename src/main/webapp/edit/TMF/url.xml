<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
  
<wizard-schema id="url">
	<title xml:lang="en">URL wizard</title>
	<title xml:lang="nl">URL tovenaar</title>
	
<action type="create">
	<object type="url"><field name="url">http://</field></object>
</action>

<!-- Action to delete a url object -->
<action type="delete">
		<prompt xml:lang="en">Are you sure you want to remove this url?</prompt>
		<prompt xml:lang="nl">Weet je zeker dat je deze url wilt verwijderen?</prompt>
	 	<description xml:lang="en">Delete object</description>
	 	<description xml:lang="nl">Verwijder object</description>
</action>
        	
<action type="load" />

	
<form-schema id="step1">
   <title xml:lang="en">url Wizard</title>
   <title xml:lang="nl">url Tovenaar</title>
   <field name="title" dtminlength="1" dtmaxlength="255" >
   <prompt xml:lang="en">Titel</prompt>
   <prompt xml:lang="nl">Titel</prompt>
   </field>
   <field name="description" dttype="html" dtminlength="1" dtmaxlength="64000" >
   <prompt xml:lang="en">description</prompt>
   <prompt xml:lang="nl">beschrijving</prompt>
   </field>
   <field name="url" dtminlength="1" dtmaxlength="255" >
   <prompt>url</prompt>
   </field>
   <list include="TMF/list_keyword.xml" />
   <field name="keys">
   	<prompt xml:lang="en">Keywords</prompt>
   	<prompt xml:lang="nl">Trefwoord</prompt>
   </field>
</form-schema>
</wizard-schema>
