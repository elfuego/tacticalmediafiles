<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
 
		<list role="related" destination="work" >
			<title xml:lang="en">Related Works</title>
			<title xml:lang="nl">Gerelateerde Werken</title>
	
			<item>
				<field name="title" ftype="data">
					<prompt xml:lang="en">Title</prompt>
					<prompt xml:lang="nl">Titel</prompt>
				</field>
				<field name="subtitle" ftype="data">
					<prompt xml:lang="en">Subtitle</prompt>
					<prompt xml:lang="nl">Subtitel</prompt>
				</field>
				<field ftype="startwizard" wizardname="TMF/work" inline="true" />
			</item>

			<command name="search" nodepath="work" fields="title,subtitle" age="-1">
				<prompt xml:lang="en">Search Works</prompt>
				<prompt xml:lang="nl">Zoek Werken</prompt>

				<search-filter>
					<name xml:lang="en">Title:</name>
					<name xml:lang="nl">Titel:</name>
					<search-fields>title</search-fields>
				</search-filter>
				<search-filter>
					<name xml:lang="en">Subtitle:</name>
					<name xml:lang="nl">Subtitel:</name>
					<search-fields>subtitle</search-fields>
				</search-filter>
	        </command>
			<command name="startwizard" inline="true" wizardname="TMF/work" objectnumber="new" />
			<action type="create">
				<relation destination="work" role="related" />
			</action>
		</list>